{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C/C++: g++ build terminal",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}/out/terminal",
      "args": ["terminal"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "terminal"
    },
    {
      "name": "C/C++: g++ build gui",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}/out/gui",
      "args": ["gui"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "gui"
    }
  ]
}