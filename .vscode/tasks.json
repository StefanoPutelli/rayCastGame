{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "terminal",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${fileDirname}/main_terminal.cpp", 
                "${fileDirname}/stuff/game.cpp", 
                "${fileDirname}/stuff/terminal_display.cpp",
                "-o",
                "${fileDirname}/out/terminal"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "gui",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${fileDirname}/main_gui.cpp", 
                "${fileDirname}/stuff/game.cpp", 
                "${fileDirname}/stuff/gui_display.cpp",
                "-ljsoncpp", "-lGL", "-lGLU", "-lglut",
                "-o",
                "${fileDirname}/out/gui"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ]
